{
    "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Marple JsonStat Dataset Schema",
	"id": "schema/marple-dataset.json",
	"description": "Project specific additions to base schema for JsonStat Dataset.",
    "properties": {
        "dimension": {
            "type": "object",
            "properties": {},
            "required": [ "region", "measure", "timepoint" ]
        },
        "source": {
            "type": "string"
        },
        "extension": {
            "type": "object",
            "properties": {
                "id": { "type": "string" }
            },
            "required": ["id", "periodicity"]
        }
    },
    "required": ["source", "updated", "extension"]
}